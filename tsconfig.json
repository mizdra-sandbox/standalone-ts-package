{
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    /* Basic Options */
    "target": "es2020",
    "lib": ["es5"],
    "typeRoots": [],
    "outDir": "./dist",
    "declaration": true,

    /* Module Options */
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Strict Type-Checking Options */
    "strict": true
  }
}
